{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Design",
  "scopeName": "text.design",
  "patterns": [
    {
      "include": "#notes"
    }
  ],
  "repository": {
    "notes": {
      "patterns": [
        {
          "name": "comment.line.number-sign.design",
          "match": "^\\s*#.*"
        },
        {
          "name": "entity.name.tag.design",
          "begin": "【",
          "end": "】",
          "patterns": [
            {
              "match": "[^】]+",
              "name": "string.quoted.double.design"
            }
          ]
        },
        {
          "name": "comment.line.number-sign.design",
          "match": "：.*"
        }
      ]
    }
  }
}